public class FormatadorCepExemplo{
    public static void main(String[] args) {
        String cepFormatado = formatarCep("8888");

    }    

    static String formatarCep(String cep) throws CepInvalidoException{
        if(cep.length() != 8)
            throw new CepInvalidoException();

        return cep
    }e
}